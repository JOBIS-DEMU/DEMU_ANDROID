<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/back_white"
    tools:context=".Blog.WrtieBlogFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="62dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        />

    <TextView
        android:id="@+id/tv_major_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="backend"
        android:textColor="@color/main"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        />

    <ImageButton
        android:id="@+id/img_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_down_arrow"
        android:background="@color/back_white"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_major_title"
        app:layout_constraintTop_toTopOf="@id/tv_major_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_major_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록"
        android:textSize="18sp"
        android:textColor="@color/text_gray"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/gl_top"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        />

    <ImageView
        android:id="@+id/spacer_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividing_line_color"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintTop_toBottomOf="@id/tv_major_title"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:strokeColor="@color/text_gray"
        android:backgroundTint="@color/back_white"
        android:backgroundTintMode="src_over"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/spacer_1"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_add_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/5"
            android:textColor="@color/text_gray"
            android:textSize="8dp"
            android:layout_marginHorizontal="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp" />
    </com.google.android.material.card.MaterialCardView>

    <EditText
        android:id="@+id/et_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="제목"
        android:textSize="26dp"
        android:background="@null"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/cv_add_image"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        />

    <ImageView
        android:id="@+id/spacer_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dividing_line_color"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>